{
    "name": "LinkSweep",
    "description": "Automatically aggregates and copies links within a Medium blog post.",
    "version": "1.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "sweepicon.png",
        "32": "sweepicon.png",
        "48": "sweepicon.png",
        "128": "sweepicon.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["popup.css"],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "https://medium.com/p/*",
        "https://www.blogger.com/blog/post/edit/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "sweepicon.png"
            ],
            "matches": [
                "<all_urls>"
            ],
            "use_dynamic_url": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_title": "LinkSweep",
        "default_icon": "sweepicon.png"
    }
}